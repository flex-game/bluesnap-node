{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "types": ["jest"],

    // For debugging
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [ "src/**/*", "test/**/*", "config/**/*"],
  "exclude": [ "./node_modules/*", "dist" ],
  "compileOnSave": true,
  "declaration": true
}
